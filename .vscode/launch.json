{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to Delve in Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "127.0.0.1",
            "port": 2345, // Use the local port mapped in docker-compose or directly exposed
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app" // This should match the WORKDIR in your Dockerfile
                }
            ],
            "trace": "verbose" // Optional: for detailed debugger logs
        }
    ]
}